<div class="container">
    <div class="row">
        {{#each this}}
            <h2>{{date}}</h2>
            {{#each notes}}
                <div class="col-sm-4 d-flex align-items-stretch p-2">
                    <div class="card">
                        <img src="{{photoUrl}}" class="card-img-top">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{title}}</h5>
                            <p class="card-text mb-3">{{text}}</p>
                            <a href="/info/{{id}}" class="btn btn-primary mt-auto align-self-end">Посмотреть</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{/each}}
    </div>
</div>